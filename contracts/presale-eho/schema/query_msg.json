{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "oneOf": [
    {
      "description": "Returns the contract's immutable configuration.",
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the contract's current dynamic state.",
      "type": "object",
      "required": [
        "state"
      ],
      "properties": {
        "state": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the exchange rates for all accepted tokens.",
      "type": "object",
      "required": [
        "accepted_rates"
      ],
      "properties": {
        "accepted_rates": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Checks if a given address is whitelisted.",
      "type": "object",
      "required": [
        "is_whitelisted"
      ],
      "properties": {
        "is_whitelisted": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the total USDC-equivalent value a user has contributed.",
      "type": "object",
      "required": [
        "total_contribution_of"
      ],
      "properties": {
        "total_contribution_of": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the specific coins a user has contributed.",
      "type": "object",
      "required": [
        "contributions_of"
      ],
      "properties": {
        "contributions_of": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Calculates and returns the amount of EHO a user is entitled to claim based on their current contribution. Returns 0 if they haven't contributed.",
      "type": "object",
      "required": [
        "eho_allocation_of"
      ],
      "properties": {
        "eho_allocation_of": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  ]
}
